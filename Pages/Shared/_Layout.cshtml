@{
    var path = Context.Request.Path.Value ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RmaTracker</title>

    <script type="importmap"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RmaTracker.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-page="/Index">RmaTracker</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark @(path == "/" ? "fw-semibold" : "")"
                               asp-page="/Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(path.StartsWith("/Rmas") && !path.StartsWith("/Rmas/Create") ? "fw-semibold" : "")"
                               asp-page="/Rmas/Index">RMAs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @(path.StartsWith("/Rmas/Create") ? "fw-semibold" : "")"
                               asp-page="/Rmas/Create">Create RMA</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container pb-3">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-2 mt-3">
        <div class="container small">
            &copy; 2025 - RmaTracker
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.4/dist/chart.umd.min.js"></script>
    @* Flash toast (shown when TempData["Flash"] is set) *@
    @if (TempData["Flash"] is string flashMsg)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
            <div id="flashToast" class="toast align-items-center text-bg-light border border-success shadow" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3500">
                <div class="d-flex">
                    <div class="toast-body">
                        <span class="badge bg-success-subtle text-success border border-success me-2">Success</span>
                        @flashMsg
                    </div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>

        <script>
            // Auto-show the toast when present
            (function () {
                var el = document.getElementById('flashToast');
                if (el && window.bootstrap) {
                    var t = new bootstrap.Toast(el);
                    t.show();
                }
            })();
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
